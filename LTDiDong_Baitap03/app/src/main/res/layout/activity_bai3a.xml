<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!-- Cột 1: Gồm 2 TextView xếp dọc (01, 02) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="2">

        <!-- TextView 01: chiếm 1/2 chiều cao cột 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="01"
            android:gravity="center"
            android:background="#FFFF00"/>

        <!-- TextView 02: chiếm 1/2 chiều cao cột 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="02"
            android:gravity="center"
            android:background="#009688"/>
    </LinearLayout>

    <!-- Cột 2: Gồm 3 TextView xếp dọc (03, 04, 05) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="3">

        <!-- TextView 03: chiếm 1/3 chiều cao cột 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="03"
            android:gravity="center"
            android:background="#FFC0CB"/>

        <!-- TextView 04: chiếm 1/3 chiều cao cột 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="04"
            android:gravity="center"
            android:background="#00BCD4"/>

        <!-- TextView 05: chiếm 1/3 chiều cao cột 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="05"
            android:gravity="center"
            android:background="#657080"/>
    </LinearLayout>

    <!-- Cột 3: Gồm 2 TextView xếp dọc, nhưng có tỉ lệ weight khác nhau (1:4) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="5">

        <!-- TextView 06a: chiếm 1/5 chiều cao cột 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="06"
            android:gravity="center"
            android:background="#FFFA00"/>

        <!-- TextView 06b: chiếm 4/5 chiều cao cột 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="06"
            android:gravity="center"
            android:background="#009688"/>
    </LinearLayout>

    <!-- Cột 4: Gồm 1 TextView (07), chiếm toàn bộ chiều cao cột 4 -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="07"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#E49DCF"/>
</LinearLayout>
